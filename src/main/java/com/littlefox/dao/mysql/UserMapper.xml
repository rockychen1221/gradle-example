<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.littlefox.dao.UserMapper">

  <resultMap id="BaseResultMap" type="com.littlefox.model.User">
    <result column="id" jdbcType="VARCHAR" property="id" />
    <result column="user_name" jdbcType="VARCHAR" property="userName" />
    <result column="phone" jdbcType="VARCHAR" property="phone" />
  </resultMap>

  <insert id="insert" parameterType="com.littlefox.model.User">
    insert into TEST_USER (user_name, phone
      )
    values (#{userName,jdbcType=VARCHAR}, #{phone,jdbcType=VARCHAR}
      )
  </insert>

  <select id="queryList" parameterType="java.util.HashMap" resultMap="BaseResultMap">
    SELECT * FROM TEST_USER
    <where>
      <if test="id != null">
        and id = #{id}
      </if>
      <if test="userName != null">
        AND (user_name like concat('%',trim(#{userName}),'%')
      </if>
      <if test="phone != null">
        and phone = #{phone}
      </if>
    </where>
  </select>

  <select id="queryUserList" parameterType="com.littlefox.model.User" resultMap="BaseResultMap">
    SELECT * FROM TEST_USER
    <where>
      <if test="id != null">
        and id = #{id}
      </if>
      <if test="userName != null">
        and user_name = #{userName}
      </if>
      <if test="phone != null">
        and phone = #{phone}
      </if>
    </where>
  </select>

  <update id="update">
    update TEST_USER set user_name=#{userName} , phone =#{phone} where id = #{id}
  </update>

  <delete id="delete">
    delete TEST_USER where id = #{id}
  </delete>

</mapper>